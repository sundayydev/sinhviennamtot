@model CSDLNC_QuanLySVNamTot.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg p-4">
                <h2 class="text-center">Đăng Nhập</h2>
                <form asp-action="Index" method="post">
                    <div class="form-group">
                        <label asp-for="TenDangNhap">Tên đăng nhập</label>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="MatKhau">Mật khẩu</label>
                        <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="text-danger mt-2">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-3">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
