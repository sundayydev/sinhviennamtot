@model CSDLNC_QuanLySVNamTot.Models.KetQua

<h2 class="text-center my-4 fw-semibold">Chỉnh sửa Kết Quả</h2>

<div class="card shadow p-4">
    <form asp-action="Edit">
        <input type="hidden" asp-for="MaKetQua" /> <!-- Để lưu ID khi submit -->

        <div class="mb-3">
            <label asp-for="NamHoc" class="form-label"></label>
            <input asp-for="NamHoc" class="form-control" />
            <span asp-validation-for="NamHoc" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="XetLoai" class="form-label"></label>
            <select asp-for="XetLoai" class="form-select">
                <option value="Đạt">Đạt</option>
                <option value="Không đạt">Không đạt</option>
            </select>
            <span asp-validation-for="XetLoai" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaSinhVien" class="form-label"></label>
            <input asp-for="MaSinhVien" class="form-control" readonly /> <!-- Không cho sửa -->
            <span asp-validation-for="MaSinhVien" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Cập nhật</button>
        <button asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-square-fill"></i> Quay lại
        </button>
    </form>
</div>
